# -----------------------------------------------------------------------------
# Plex Exporter – Unraid Docker Compose Manager (.env sample)
# Copy to `.env` and adjust secrets before importing the project into Unraid.
# -----------------------------------------------------------------------------

# Backend options
BACKEND_NODE_ENV=production
BACKEND_INTERNAL_PORT=4000
BACKEND_SQLITE_PATH=/app/data/sqlite/plex-exporter.sqlite
BACKEND_API_TOKEN=change-me
BACKEND_ADMIN_USERNAME=admin
BACKEND_ADMIN_PASSWORD=change-me
BACKEND_TMDB_ACCESS_TOKEN=
BACKEND_TAUTULLI_URL=http://192.168.178.34:8181
BACKEND_TAUTULLI_API_KEY=

# Optional integrations
BACKEND_HERO_POLICY_PATH=
BACKEND_RESEND_API_KEY=
BACKEND_RESEND_FROM_EMAIL=

# Persistent volume locations (recommended Unraid paths)
BACKEND_DATA_PATH=/mnt/user/appdata/plex-exporter/backend
CADDY_DATA_PATH=/mnt/user/appdata/plex-exporter/caddy/data
CADDY_CONFIG_PATH=/mnt/user/appdata/plex-exporter/caddy/config

# Caddy HTTP port (Cloudflare Tunnel terminates HTTPS)
CADDY_HTTP_PORT=8342

# Optional: Tag für Registry-Images (nur bei docker-compose.images.yml)
IMAGE_TAG=latest
